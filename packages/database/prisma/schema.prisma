generator client {
  provider = "prisma-client-js"
  output   = "../dist"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Session {
  objId     String   @id @default(auto()) @map("_id") @db.ObjectId
  id        String   @unique
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("sessions")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String?
  displayName String
  password    String
  isVerified  Boolean  @default(false)
  quizzes     Quiz[]
  createdAt   DateTime @default(now())

  @@map("users")
}

type AnswerOption {
  id   Int
  text String
}

type Question {
  id            Int
  text          String
  answerOptions AnswerOption[]
  correct       Int
}

model Quiz {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  questions Question[]
  userId    String     @db.ObjectId
  createdBy User       @relation(fields: [userId], references: [id])
  createdAt DateTime   @default(now())

  @@map("quizzes")
}

model VerificationCode {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  code   String @unique @default(cuid())
  userId String @db.ObjectId

  @@map("verificationCodes")
}
